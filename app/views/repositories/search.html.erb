<h1>Search Github Repositories</h1>
<%= form_tag '/search' do %>
  <%= label_tag :query %>
  <%= text_field_tag :query %>
  <%= submit_tag "Search Github!" %>
<% end %>

<div class="">
  <% if @repos %>
  <ul>


   <% @repos.each do |repo| %>
      <%= repo['name'] %><br>
      <%= link_to result["html_url"], result["hotml_url"] %><br>

      <%= repo['description'] %></li>
   <% end  %>
 </ul>
 <% end %>

</div>
